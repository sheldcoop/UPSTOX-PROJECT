# ============================================
# UPSTOX TRADING PLATFORM - ENVIRONMENT CONFIG
# ============================================
# Copy this file to .env and fill in your credentials

# ============================================
# DEPLOYMENT MODE - CHANGE ONLY THIS LINE!
# ============================================
# FOR LOCAL:      BASE_URL=http://localhost:5050
# FOR PRODUCTION: BASE_URL=http://161.118.184.174:5050
BASE_URL=http://localhost:5050

# Upstox API Credentials
# Get from: https://upstox.com/developer/settings
UPSTOX_CLIENT_ID=your-upstox-client-id-here
UPSTOX_CLIENT_SECRET=your-upstox-client-secret-here

# Access Tokens (JWT format - provided by user)
# Live Token (expires daily at 3:30 PM IST - auto-refresh enabled)
UPSTOX_ACCESS_TOKEN=your-live-access-token-here
# Sandbox Token (valid for 10 years)
UPSTOX_SANDBOX_TOKEN=your-sandbox-token-here

# Environment: live or sandbox
UPSTOX_ENV=live

# OAuth URLs (automatically use BASE_URL)
UPSTOX_REDIRECT_URI=${BASE_URL}/auth/callback
DASHBOARD_URL=${BASE_URL}
OAUTH_URL=${BASE_URL}/auth/start

# Security
# Generate new keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=generate-your-own-encryption-key-here
SECRET_KEY=generate-your-own-secret-key-here
API_KEY=optional-api-key-for-protected-endpoints
UPSTOX_WEBHOOK_SECRET=optional-webhook-secret-for-signature-verification

# Server
FLASK_PORT=5050
FLASK_DEBUG=False
FLASK_ENV=production
APP_VERSION=1.0.0

# Database
DATABASE_URL=sqlite:///market_data.db

# Redis Configuration
# LOCAL:      redis://localhost:6379/0
# PRODUCTION: redis://redis:6379/0 (if using Docker)
REDIS_URL=redis://localhost:6379/0


# Monitoring & Error Tracking
SENTRY_DSN=optional-sentry-dsn-for-error-tracking

# Email Notifications
EMAIL_FROM=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_TO=recipient@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Oracle Cloud Deployment (for CI/CD)
OCI_HOST=your-oracle-cloud-ip
OCI_USERNAME=opc
# OCI_SSH_KEY should be set as GitHub secret
