# ============================================
# UPSTOX TRADING PLATFORM - ENVIRONMENT CONFIG
# ============================================
# Copy this file to .env and fill in your credentials

# Upstox API Credentials
# Get from: https://upstox.com/developer/settings
UPSTOX_CLIENT_ID=your_client_id_here
UPSTOX_CLIENT_SECRET=your_secret_here

# Redirect URI for OAuth callback
# Local development: http://localhost:5050/auth/callback
# Production: http://161.118.184.174:5050/auth/callback
UPSTOX_REDIRECT_URI=http://161.118.184.174:5050/auth/callback

# Dashboard URL (where to redirect after successful login)
# Local: http://localhost:5050
# Production: http://161.118.184.174:5050
DASHBOARD_URL=http://161.118.184.174:5050

# OAuth Start URL (for browser)
# Local: http://localhost:5050/auth/start
# Production: http://161.118.184.174:5050/auth/start
OAUTH_URL=http://161.118.184.174:5050/auth/start

# Security
ENCRYPTION_KEY=generate_with_fernet_key_generate
SECRET_KEY=change-this-to-random-secret-key-in-production
API_KEY=optional-api-key-for-protected-endpoints

# Server
FLASK_PORT=5050
FLASK_DEBUG=False
FLASK_ENV=production
APP_VERSION=1.0.0

# Database
DATABASE_URL=sqlite:///market_data.db

# Redis Configuration
# Local: redis://localhost:6379/0
# Docker: redis://redis:6379/0
REDIS_URL=redis://redis:6379/0

# Email Notifications (optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_EMAIL=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Telegram Notifications (optional)
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Monitoring & Error Tracking
SENTRY_DSN=optional-sentry-dsn-for-error-tracking

# Email Notifications
EMAIL_FROM=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_TO=recipient@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Oracle Cloud Deployment (for CI/CD)
OCI_HOST=your-oracle-cloud-ip
OCI_USERNAME=opc
# OCI_SSH_KEY should be set as GitHub secret
